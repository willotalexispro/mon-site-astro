---
interface Props {
  citation: string;
  auteur: string;
  entreprise: string;
}

const { citation, auteur, entreprise } = Astro.props;
---

<blockquote class="temoignage">
  <span class="guillemet">"</span>
  <p class="citation">{citation}</p>
  <footer>
    <span class="auteur">{auteur}</span>
    <span class="entreprise">{entreprise}</span>
  </footer>
</blockquote>

<style>
  .temoignage {
    position: relative;
    padding: 2rem 1.75rem 1.5rem;
    margin: 0;
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 12px;
    transition: transform 0.2s, border-color 0.2s;
    display: flex;
    flex-direction: column;
    height: 100%;
    box-sizing: border-box;
  }

  .temoignage:hover {
    transform: translateY(-3px);
    border-color: rgba(74, 144, 217, 0.3);
  }

  .guillemet {
    position: absolute;
    top: -0.2rem;
    left: 1rem;
    font-size: 4rem;
    line-height: 1;
    color: #4a90d9;
    opacity: 0.4;
    font-family: Georgia, serif;
  }

  .citation {
    margin: 0.5rem 0 0 0;
    font-style: italic;
    line-height: 1.7;
    color: #d0d0d0;
    font-size: 0.93rem;
    flex: 1;
  }

  .temoignage footer {
    display: flex;
    flex-direction: column;
    gap: 0.15rem;
    margin-top: 1.25rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.08);
  }

  .auteur {
    color: #ffffff;
    font-weight: 600;
    font-size: 0.95rem;
  }

  .entreprise {
    color: #4a90d9;
    font-size: 0.85rem;
  }
</style>
