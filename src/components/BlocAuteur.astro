---
import type { Auteur } from '../data/auteurs';

interface Props {
  auteur: Auteur;
}

const { auteur } = Astro.props;
---

<aside class="bloc-auteur">
  <div class="auteur-info">
    <p class="auteur-nom">{auteur.nom}</p>
    <p class="auteur-description">{auteur.description}</p>
    {auteur.linkedin && (
      <a href={auteur.linkedin} target="_blank" rel="noopener noreferrer" class="auteur-linkedin" aria-label={`Profil LinkedIn de ${auteur.nom}`}>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 0 1-2.063-2.065 2.064 2.064 0 1 1 2.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
        </svg>
        LinkedIn
      </a>
    )}
  </div>
</aside>

<style>
  .bloc-auteur {
    margin-top: 3rem;
    padding: 1.5rem;
    background: #f0f4f8;
    border-radius: 8px;
    border-left: 4px solid #4a90d9;
  }

  .auteur-nom {
    font-weight: 700;
    font-size: 1.1rem;
    margin: 0 0 0.4rem 0;
    color: #081c37;
  }

  .auteur-description {
    margin: 0 0 0.8rem 0;
    color: #555;
    font-size: 0.95rem;
    line-height: 1.5;
  }

  .auteur-linkedin {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    color: #0a66c2;
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
  }

  .auteur-linkedin:hover {
    text-decoration: underline;
  }
</style>
